<div class="row">
    <div class="col-md-12">
        <h2>
            Items
            <a href="/items/add" class="btn btn-success pull-right">Add Item</a>
        </h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th> <!-- Empty header for the Remove column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.body}}</td>
                        <td>{{this.category}}</td>
                        <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                        <td>
                            <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless items.length}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
    </div>
</div>
